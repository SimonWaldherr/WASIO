{
  "port": "8080",
  "cache_ttl": 300,
  "cache_size": 1024,
  "routes": {
    "/hello_world": {
      "wasm_file": "instruments/hello_world.wasm",
      "cache": false
    },
    "/llama-chat": {
      "wasm_file": "instruments/llama-chat.wasm",
      "cache": false
    },
    "/random": {
      "wasm_file": "instruments/random_number.wasm",
      "cache": false
    },
    "/fibonacci": {
      "wasm_file": "instruments/fibonacci.wasm",
      "cache": true,
      "ttl": 600
    },
    "/process_file": {
      "wasm_file": "instruments/file_processor.wasm",
      "cache": false,
      "ttl": 120,
      "filesystem": {
        "mount": "/data",
        "path": "./data"
      }
    },
    "/profile": {
      "wasm_file": "instruments/profile.wasm",
      "cache":     false,
      "filesystem": {
        "mount": "/templates",
        "path":  "./templates"
      }
    },
    "/wiki": {
      "wasm_file": "instruments/wiki.wasm",
      "cache":     false,
      "ttl":       60,
      "filesystem": {
        "mount": "/wiki",
        "path":  "./wiki"
      }
    }
  }
}